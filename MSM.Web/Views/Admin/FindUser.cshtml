@model MSM.Web.Models.Admin.FindUser
<div class="container">
@using (Html.BeginForm()) {
    <div class="clearfix">
        <div class="form-group">
            @Html.LabelFor(m => m.Username)
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Enter Minecraft username..." })
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-primary float-right">Find</button>
    </div>
}
    
@if (Model.FoundUser != null) {
    <div class="card">
        <div class="card-header">
            Found User
        </div>
        <div class="card-body">
            <p class="card-text">@Model.FoundUser.Name (@Model.FoundUser.Id)</p>
        </div>
        <div class="card-footer">
            @using (Html.BeginForm("AddUser", "Admin")) {
                @Html.HiddenFor(m => m.FoundUser.Id)
                @Html.HiddenFor(m => m.FoundUser.Name)
                @Html.HiddenFor(m => m.Username)
                <button type="submit" class="btn btn-primary float-right">Add User</button>
            }
        </div>
    </div>
}
</div>